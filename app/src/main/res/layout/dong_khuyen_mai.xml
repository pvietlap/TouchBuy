<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="5sp"
        android:background="@drawable/backg_gridview"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="160sp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="10sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="250sp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerHorizontal="true"
                android:src="@drawable/image"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:id="@+id/imgHinhSanPhamKM"
                />
            <ImageView
                android:layout_marginLeft="130sp"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="@drawable/gift"/>
        </RelativeLayout>

        <TextView
            android:layout_marginBottom="5sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ten San Pham"
            android:textSize="12sp"
            android:textColor="#000"
            android:id="@+id/txtTenSanPhamKM"
            />
        <TextView
            android:id="@+id/txtGiaCuKM"
            android:textStyle="italic"
            android:textColor="#252525"
            android:textSize="11sp"
            android:text="Gia cu"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gia San Pham"
            android:textSize="12sp"
            android:textColor="#ff00"
            android:id="@+id/txtGiaSanPhamKM"
            />
    </LinearLayout>
</LinearLayout>