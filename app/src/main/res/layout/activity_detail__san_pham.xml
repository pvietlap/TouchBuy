<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.phamvietlap.touchbuy.Activity.Activity.Detail_SanPham">

    <android.support.v4.widget.DrawerLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/MyDrawerlayout"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:background="#f2e603"
                app:titleTextColor="#210e74"
                android:id="@+id/nav_toolbar_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.Toolbar>

            <TextView
                android:id="@+id/ten_sanpham_detail"
                android:layout_marginLeft="10sp"
                android:textColor="#1a1818"
                android:text="Tên sản phẩm"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#f00000"
                android:id="@+id/txt_giasanpham_detail"
                android:textSize="19dp"
                android:layout_marginTop="5sp"
                android:paddingLeft="14sp"
                android:text="Giá sản phẩm:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ScrollView
                android:layout_weight="1"
                android:scrollbars="none"
                android:layout_marginTop="10sp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginBottom="1sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/img_hinhsanpham_detail"
                                android:layout_marginTop="15sp"
                                android:layout_centerHorizontal="true"
                                android:layout_width="270sp"
                                android:layout_height="300sp" />
                            <ProgressBar
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:id="@+id/progresssBar_detail"
                                android:visibility="invisible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <LinearLayout
                        android:background="@drawable/line_shape"
                        android:layout_marginRight="20sp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="2sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/line_shape"
                        android:layout_marginRight="15sp"
                        android:layout_marginLeft="15sp"
                        android:layout_marginTop="3sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="2sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="left"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:text="Chi Tiết"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_marginLeft="60sp"
                            android:layout_width="200sp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center_horizontal"
                                android:textSize="20sp"
                                android:text="Số lượng"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginTop="-2sp"
                                android:layout_marginLeft="30sp"
                                android:textSize="25sp"
                                android:text="-"
                                android:id="@+id/txtdown"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                            android:layout_marginTop="-2sp"
                            android:textColor="#ac3913"
                            android:layout_marginLeft="15sp"
                            android:textSize="25sp"
                            android:text="0"
                            android:id="@+id/txtsoluong"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginTop="-2sp"
                                android:layout_marginLeft="15sp"
                                android:textSize="25sp"
                                android:text="+"
                                android:id="@+id/txtup"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_marginBottom="5sp"
                        android:layout_marginRight="8sp"
                        android:layout_marginLeft="8sp"
                        android:layout_marginTop="15sp"
                        android:background="@drawable/background_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_margin="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chi tiết"
                            android:textSize="22sp"
                            android:id="@+id/txtChiTietSP"
                            />
                    </RelativeLayout>



                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_marginLeft="8sp"
                android:layout_marginRight="8sp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_marginRight="2sp"
                    android:id="@+id/btnMua"
                    android:background="@drawable/shape_button"
                    android:textSize="15sp"
                    android:textColor="#4b4b4b"
                    android:text="Mua ngay"
                    android:layout_weight="4"
                    android:layout_width="fill_parent"
                    android:layout_height="60sp" />
                <ImageButton
                    android:src="@drawable/add_cart"
                    android:id="@+id/btnThem"
                    android:textSize="15sp"
                    android:background="#fbd303"
                    android:layout_weight="6"

                    android:layout_width="fill_parent"
                    android:layout_height="60sp" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>





</android.support.v4.widget.DrawerLayout>
