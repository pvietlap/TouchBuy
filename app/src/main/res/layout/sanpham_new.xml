<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/backg_gridview"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="200sp"
        android:layout_height="165sp"
        android:layout_marginTop="5sp">
        <RelativeLayout
            android:layout_marginTop="10sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="250sp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_hinhsanpham_new"
                android:src="@drawable/image"
                android:layout_centerHorizontal="true"
                android:layout_width="100sp"
                android:layout_height="100sp" />
            <ImageView
                android:layout_marginLeft="130sp"

                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="@drawable/new_icon"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/txt_tensanpham_new"
            android:textColor="#000"
            android:textSize="12sp"
            android:text="Ten San Pham"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"/>
        <TextView

            android:id="@+id/txt_giasanpham_new"
            android:textColor="#ff00"
            android:textSize="12sp"
            android:text="Ten San Pham"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>